<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activity.medicamentos.PaginaMedicamentosActivity">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="30dp"
        android:contentDescription="Logo da Aplicação"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_solicitar_medicamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Solicitar Medicamento"
        android:scaleType="fitCenter"
        android:textColor="@android:color/white"
        android:drawableTop="@drawable/ic_medication"
        android:drawablePadding="8dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/logo_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_listar_medicamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Listar Medicamento(s)"
        android:textColor="@android:color/white"
        android:drawableTop="@drawable/ic_list"
        android:drawablePadding="8dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/button_solicitar_medicamento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_cancelar_medicamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Cancelar Medicamento(s)"
        android:textColor="@android:color/white"
        android:drawableTop="@drawable/ic_delete"
        android:drawablePadding="8dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/button_listar_medicamento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>